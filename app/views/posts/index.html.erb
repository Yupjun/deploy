<div id= "content">
    <div id="posts_background">
        <%= form_tag posts_path, method: :get, class: 'form-horizontal' do %>
            <div class="form-group">
             
                <div class="col-sm-6">
                  <%= select_tag(:category, options_for_select([['Title', "title"], ['Content', "body"],['Username', "nickname"]])) %>
                  <%= text_field_tag :search%>  
                  <%= submit_tag "Search", :name => nil %> 
                </div>
            </div>
            <!--:name => nil 은 대체 뭘까요? : 준엽이형이 알려줘서 해결! -->
        <% end %>
        <br>
        
     
        
    
        <table>
            
                <tr class="table1">
                
                    <td class="th1">Category</td>
                    <td class="th2">Title</td>
                    <td class="th3">User</td>
                </tr>
                 <% if @posts.none? %>
                    Sorry, no results... Try something else. 
                 <% end %> 
            
                <% @posts.each do |post| %>
                <tr class="table2">
                    <td class="th1"><%= post.category.name %></td>
                    <td class="th2"><a href='<%= post_path(post) %>'><%= post.title %></a></td>
                    <td class="th3"><%= post.nickname %></td>
                    
                </tr>
                <% end %>
        </table>
        <br>
    <div style="text-align: center;">
        <%= will_paginate @posts %>
    </div>
